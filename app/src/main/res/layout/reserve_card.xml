<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/doctor_card"
    android:padding="15dp">

    <TextView
        android:id="@+id/reserve_card_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام دکتر: علیرضا دیزجی"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/reserve_card_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_username"
        android:layout_marginTop="11dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reserve_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_occupation"
        android:layout_marginTop="11dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reserve_card_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_occupation"
        android:layout_marginTop="46dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reserve_card_patient_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_occupation"
        android:layout_marginTop="81dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="تاریخ رزرو: ۱۳۹۸/۱۲/۲۶ ۲۳:۵۵" />

    <TextView
        android:id="@+id/reserve_card_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_occupation"
        android:layout_marginTop="46dp"
        android:text="تاریخ رزرو: ۱۳۹۸/۱۲/۲۶ ۲۳:۵۵" />

    <TextView
        android:id="@+id/reserve_card_patient_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_occupation"
        android:layout_marginTop="81dp"
        android:text="تاریخ رزرو: ۱۳۹۸/۱۲/۲۶ ۲۳:۵۵" />

    <Switch
        android:id="@+id/reserve_card_switch"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="285dp"
        android:text="رزرو"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/reserve_card_reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserve_card_switch"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="323dp"
        android:layout_marginLeft="323dp"
        android:textColor="@color/reserved"
        android:text="رزرو شده"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reserve_card_cancel"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/reserve_card_reserved"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="309dp"
        android:layout_marginLeft="309dp"
        android:layout_marginTop="0dp"
        android:text="کنسل"
        android:textSize="16dp"
        android:textStyle="bold"/>

</RelativeLayout>