<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/doctor_card"
    android:layoutDirection="rtl">
    <androidx.cardview.widget.CardView
        android:id="@+id/doctor_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">
    <ImageView
        android:id="@+id/doctor_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/me" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/doctor_card_view"
        android:orientation="vertical"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نا مشخص"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/doctor_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نامشخص"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/doctor_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="نامشخص" />
    </LinearLayout>
</RelativeLayout>